<%- include('partials/header') %>
<div class="bg-blue-300 px-6">
<form action="/create-profile" class="w-full py-6 mx-auto lg:w-1/4" method="POST">
  <div class="mb-3">
    <div class="">
      <label class="block font-bold mb-1 pr-4" for="inline-full-name">
        Full Name
      </label>
    </div>
    <div class="">
      <input name="fullname" class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4  leading-tight focus:outline-none focus:bg-white focus:border-purple-500" id="inline-full-name" type="text" placeholder="John Fatima">
    </div>
  </div>
  <div class="mb-3">
    <div class="">
      <label class="block font-bold mb-1 pr-4" for="inline-class">
        Class
      </label>
    </div>
    <div class="">
      <input name="class" class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4  leading-tight focus:outline-none focus:bg-white focus:border-purple-500" id="inline-class" type="text" placeholder="SS3A">
    </div>
  </div>
  <div class="md:items-center mb-3">
    <div class="">
      <label class="block font-bold mb-1 pr-4" for="inline-full-name">
        Residence
      </label>
    </div>
    <div class="">
      <input name="residence" class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4  leading-tight focus:outline-none focus:bg-white focus:border-purple-500" id="inline-full-name" type="text" placeholder="Abuja, Nigeria">
    </div>
  </div>
  <div class="md:items-center mb-3">
    <div class="">
      <label class="block font-bold mb-1 pr-4" for="inline-full-name">
        Occupation
      </label>
    </div>
    <div class="">
      <input name="occupation" class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4  leading-tight focus:outline-none focus:bg-white focus:border-purple-500" id="inline-full-name" type="text" placeholder="Carpenter">
    </div>
  </div>
<!-- Birthdate begins -->
  <div class="flex flex-wrap -mx-3 mb-2">
    <div class="w-full px-3 mb-3">
      <label class="block uppercase tracking-wide text-xs block font-bold mb-1" for="inline-day">
        Dayof Birth
      </label>
      <input name="day" class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4  leading-tight focus:outline-none focus:bg-white focus:border-purple-500" id="inline-day" type="text" placeholder="12">
    </div>
    <div class="w-full px-3 mb-3" >
      <label class="block uppercase tracking-wide text-xs font-bold mb-1" for="grid-state">
        Month of Birth
      </label>
      <div class="relative">
        <select name="month" class="block appearance-none w-full bg-gray-200 border border-gray-200  py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="grid-state">
          <option></option>
          <option>January</option>
          <option>February</option>
          <option>March</option>
          <option>April</option>
          <option>May</option>
          <option>June</option>
          <option>July</option>
          <option>August</option>
          <option>September</option>
          <option>October</option>
          <option>Novemeber</option>
          <option>December</option>
        </select>
        <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 ">
          <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
        </div>
      </div>
    </div>
  </div>
  <!-- Birthdate ends -->

  <!-- Upload image starts -->
  <div class="w-full mb-3">
    <label class="block uppercase tracking-wide text-xs font-bold mb-1" for="grid-zip">
      Upload Your Profile Picture
    </label>
    <input name="image" class="appearance-none block w-full bg-gray-200  border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="grid-zip" type="file" accept="image/*">
  </div>
  <!-- Upload image ends -->
  <div class="w-full flex justify-end">
      <button type="submit" class="shadow bg-purple-500 hover:bg-purple-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded" type="button">
        Sign Up
      </button>
    </div>

</form>
</div>